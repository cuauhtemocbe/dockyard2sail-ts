{
  "name": "typescript-pnpm-docker-boilerplate",
  "version": "1.0.0",
  "description": "A TypeScript boilerplate with pnpm, Docker, and DevContainers support",
  "private": true,
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview --host 0.0.0.0",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "validate": "./scripts/validate.sh",
    "prepare": "husky"
  },
  "dependencies": {
    "vite": "^5.4.0"
  },
  "devDependencies": {
    "@types/node": "^22.18.1",
    "@vitest/coverage-v8": "^2.0.5",
    "@vitest/ui": "^2.0.5",
    "husky": "^9.1.7",
    "jsdom": "^25.0.0",
    "lint-staged": "^16.1.6",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "bash -c 'cd /app && pnpm run typecheck'",
      "bash -c 'cd /app && pnpm run build'"
    ]
  }
}
